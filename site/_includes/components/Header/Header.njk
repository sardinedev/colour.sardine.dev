<style>
.button__icon {
  grid-area: 1/1;
  opacity: 0;
}
.menu__nav {
  visibility: hidden;
}
.menu__blur {
  display: none;
}
@media (min-width: 400px) {
  .menu--open .menu__blur {
    display: block;
  }
}
.menu--open .menu__icon__close{
  opacity: 1;
}
.menu--open .menu__nav {
  visibility: visible;
}
body:not(.menu--open) .menu__icon__burger {
  opacity: 1;
}
body:not(.menu--open) .menu__nav {
  transform: translate3d(-100%, 0, 0);
}
@media (min-width: 1024px) {
  body:not(.menu--open) .menu__nav {
    transform: translate3d(0, 0, 0);
    visibility: visible;
  }
}
</style>
<aside class="menu lg:w-96">
  <div class="menu__blur fixed inset-0 z-10 bg-zinc-400/20 backdrop-blur-sm dark:bg-black/40 opacity-100"></div>
  <header class="relative w-full">
    <div class="bg-primary p-4 xl:p-8 flex items-center fixed top-0 left-0 z-20 w-full">
      <button class="w-8 p-1 grid menu__button lg:hidden" type="button" aria-label="Toggle navigation bar">
        <svg xmlns="http://www.w3.org/2000/svg" class="button__icon menu__icon__burger" fill="currentColor" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" clip-rule="evenodd" viewBox="0 0 24 24"><path fill-rule="nonzero" d="M22 16.75a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75zm0-5a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75zm0-5a.75.75 0 0 0-.75-.75H2.75a.75.75 0 0 0 0 1.5h18.5c.41 0 .75-.34.75-.75z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" class="button__icon menu__icon__close" fill="currentColor" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" clip-rule="evenodd" viewBox="0 0 24 24"><path d="m12 10.93 5.72-5.72a.75.75 0 0 1 1.06 1.06L13.06 12l5.72 5.72a.75.75 0 0 1-.53 1.28.75.75 0 0 1-.53-.22L12 13.05l-5.72 5.72a.75.75 0 0 1-1.06-1.06l5.72-5.72-5.72-5.72a.75.75 0 0 1 1.06-1.06z"/></svg>
      </button>
      <a class="lg:ml-0 ml-auto mr-auto" href="/">
        <img class="h-8" loading="lazy" src="/assets/icons/logo.svg" alt="Sardine logo">
      </a>
      <a href="https://github.com/sardinedev/colour" class="w-8 p-1" rel="noreferrer" target="_blank"><svg aria-labelledby="title-github-icon" role="img" viewBox="0 0 120.8 117.8" xmlns="http://www.w3.org/2000/svg"><title id="title-github-icon">link to @sardine/colour github page</title><g fill="#fff"><path d="M60.4 0a60.4 60.4 0 00-19.1 117.7c3 .5 4.1-1.3 4.1-3v-11.2c-16.9 3.7-20.4-7-20.4-7-2.8-7-6.7-9-6.7-9-5.5-3.7.4-3.6.4-3.6 6 .4 9.3 6.2 9.3 6.2 5.4 9.3 14 6.6 17.5 5 .6-3.9 2.1-6.5 3.9-8-13.4-1.5-27.5-6.7-27.5-29.9A23.4 23.4 0 0128 41c-.7-1.5-2.7-7.7.6-16 0 0 5-1.6 16.6 6.2a57.4 57.4 0 0130.2 0C87 23.4 92.1 25 92.1 25c3.3 8.3 1.2 14.5.6 16a23.3 23.3 0 016.2 16.2C99 80.4 84.8 85.5 71.3 87c2.2 1.9 4.1 5.6 4.1 11.2v16.6c0 1.6 1 3.4 4.1 2.9A60.4 60.4 0 0060.4 0z" fill-rule="evenodd"></path><path d="M22.9 86.7c-.2.3-.6.4-1 .2s-.7-.6-.6-1 .6-.3 1-.1.7.6.6.9zm2.4 2.7c-.3.3-.8.2-1.2-.2a1 1 0 01-.2-1.3c.3-.3.9-.1 1.3.3s.4 1 .1 1.2zm2.4 3.6c-.4.2-1 0-1.4-.6s-.3-1.2 0-1.5 1 0 1.4.6.4 1.2 0 1.4zm3.3 3.3a1.1 1.1 0 01-1.6-.3c-.5-.5-.7-1.2-.3-1.5s1-.3 1.5.2.7 1.2.4 1.5zm4.5 1.9c-.2.5-.9.7-1.5.5s-1.2-.8-1-1.2.8-.7 1.5-.5 1 .7 1 1.2zm4.9.4c0 .5-.6.9-1.3.9s-1.3-.4-1.3-.9.6-.9 1.3-.9 1.3.4 1.3.9zm4.6-.8c0 .5-.4 1-1.1 1.1s-1.4-.2-1.5-.6.5-1 1.2-1.2 1.3.2 1.4.7z"></path></g></svg> </a>
    </div>
    <nav class="menu__nav bg-primary fixed z-10 top-0 bottom-0 left-0 p-4 xl:p-8 mt-16 transition-all overflow-y-auto lg:w-72 xl:w-96 lg:transition-none">
      <h2 class="text-2xl">Documentation</h2>
      <h3 class="mt-4 text-xl" {% if page.url == '/' %} aria-current="page"{% endif %}>Getting started</h3>
      <ul class="flex flex-col ml-3">
        <li class="flex" {% if page.url == '/#introduction' %} aria-current="page"{% endif %}>
          <a class="py-2 w-full" href="/#introduction">Introduction</a>
        </li>
        <li class="flex" {% if page.url == '/#installation' %} aria-current="page"{% endif %}>
          <a class="py-2 w-full" href="/#installation">Installation</a>
        </li>
      </ul>
      {% set taglist = ['converters', 'util'] %}
       {%- for tag in taglist -%}
        <h3 class="mt-4 text-xl capitalize">{{ tag }}</h3>
        <ul class="flex flex-col ml-3">
          {%- for doc in collections[tag] -%}
          <li class="flex" {% if page.url == doc.url %} aria-current="page"{% endif %} >
            <a class="py-2 w-full" href="{{ doc.url }}">{{ doc.data.title }}</a>
          </li>
          {%- endfor -%}
        </ul>
      {%- endfor -%}
    </nav>
  </header>
</aside>
<script>
  const body = document.querySelector('body');
  const button = document.querySelector('button');
  button.addEventListener('click', () => {
    body.classList.toggle('menu--open');
  });
</script>
