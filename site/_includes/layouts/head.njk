  <link rel="apple-touch-icon" type="image/png" sizes="180x180" href="/assets/icons/favicon-180x180.png">

  {% if templateClass === 'tmpl-post' %}
  <meta property="og:type" content="article" />
  <meta property="og:image" content="{{  metadata.url + featured_image.src + '.png' }}" />
  {% endif %}
  {% if templateClass !== 'tmpl-post' %}
  <meta property="og:type" content="website" />
  <meta property="og:image" content="{{ metadata.image }}" />
  {% endif %}
  <meta property="og:title" content="{{ title or metadata.title }}" />
  <meta property="og:description" content="{{ summary or metadata.description }}" />
  <meta property="og:url" content="{{ metadata.url + page.url or metadata.url + '/' }}" />
  <meta property="og:site_name" content="Colour - @sardine/colour" />
  <meta property="og:image:width" content="1280">
  <meta property="og:image:height" content="640">
  <meta property="og:image:alt" content="{{ featured_image.alt or metadata.imageAlt }}">
  <meta name="description" content="{{ summary or metadata.description }}">
  {# Twitter metadata #}
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:creator" content="@marabyte_">
  <meta property="twitter:url" content="{{metadata.url + page.url or metadata.url + '/' }}">
  <meta property="twitter:title" content="{{ title or metadata.title }}">
  <meta property="twitter:description" content="{{ summary or metadata.description }}">
  <meta property="twitter:image" content="{{ metadata.url + featured_image.src + '.png' or metadata.image }}">
  <meta property="twitter:image:alt" content="{{ featured_image.alt or metadata.imageAlt }}">
  <link rel="preload" href="/assets/fonts/FiraMono-Regular.woff2" as="font" type="font/woff2" crossorigin>
  <style>
    {% css "site/_assets/styles/tailwind.css" %}
  </style>
  <style>
    {% css "site/_assets/styles/main.css" %}
  </style>
  {% if templateClass === 'tmpl-post' %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "https://google.com/article"
      },
      "headline": "{{title}}",
      "image": [
        "{{metadata.url + featured_image.src + '.png'}}"
       ],
      "datePublished": "{{date.toISOString()}}",
      "dateModified": "{{date.toISOString()}}",
      "author": {
        "@type": "Person",
        "name": "Hugo Nogueira",
        "url": "https://www.marabyte.com/about/"
      },
       "publisher": {
        "@type": "Organization",
        "name": "Sardine",
        "logo": {
          "@type": "ImageObject",
          "url": "{{metadata.image}}"
        }
      },
      "description": "{{summary}}"
    }
    </script>
  {% endif %}
</head>
