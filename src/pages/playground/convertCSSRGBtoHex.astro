---
import PlaygroundLayout from "../../layouts/PlaygroundLayout.astro";
---

<PlaygroundLayout title="convertCSSRGBtoHex">
  <script slot="script" is:inline type="module">
    import { convertCSSRGBtoHex } from "https://unpkg.com/@sardine/colour@2.4.0/dist/index.min.js";

    function convertOnSubmit(rgb) {
      try {
        const hex = convertCSSRGBtoHex(rgb);
        document.getElementById("result").innerHTML = hex;
        document.getElementById("result").style.backgroundColor = hex;
      } catch (error) {
        document.getElementById("result").innerHTML = error;
      }
    }

    window.convertOnSubmit = convertOnSubmit;
  </script>

  <div slot="body">
    <label for="rgb">Type a colour in the CSS RGB format</label>
    <input
      type="text"
      id="rgb"
      class="input"
      placeholder="rgb(255, 255, 255)"
    />
    <button
      type="button"
      onclick="convertOnSubmit(document.getElementById('rgb').value)"
    >
      Convert
    </button>
    <label id="result"></label>
  </div>
</PlaygroundLayout>
